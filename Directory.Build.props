<Project>

  <PropertyGroup>
    <!-- Use the latest .NET Core SDK -->
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <!-- Use the latest C# Language standard -->
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    
    <!-- Common defaults -->
    <IsPackable>false</IsPackable>
    <Authors>Frans van Dorsselaer</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright (c) 2020 Frans van Dorsselaer</Copyright>
    <PackageProjectUrl>https://github.com/dorssel/TestRepo</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dorssel/TestRepo.git</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <!-- Use the latest Code Analysis tooling -->
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
