<Project>

  <PropertyGroup>
    <!-- Use the latest .NET SDK -->
    <TargetFrameworks>net5.0</TargetFrameworks>
    <!-- Use the latest C# Language standard -->
    <LangVersion>9.0</LangVersion>
    <Nullable>enable</Nullable>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    
    <!-- Common defaults -->
    <IsPackable>false</IsPackable>
    <Authors>Frans van Dorsselaer</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright (C) $([System.DateTime]::UtcNow.ToString("yyyy"))  $(Authors)</Copyright>
    <PackageProjectUrl>https://github.com/dorssel/TestRepo</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dorssel/TestRepo.git</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitVersion.MsBuild" Version="5.6.6" >
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
